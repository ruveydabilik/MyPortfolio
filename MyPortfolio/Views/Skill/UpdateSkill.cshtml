@model Skill

@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yetenekler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenek Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-6">
                            <form method="post">
                                <input type="hidden" asp-for="SkillId" />
                                <label>Yetenek Adı</label>
                                <input type="text" asp-for="Title" class="form-control" />
                                <br />
                                <label>Yüzdelik Değer</label>
                                <input type="text" asp-for="Value" class="form-control" />
                                <br />
                                <button class="btn btn-primary">Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
