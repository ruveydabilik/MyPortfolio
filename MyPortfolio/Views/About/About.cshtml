@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 1;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Kontrol Paneli</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkımda alanı ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Detaylar</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@count</td>
                                    <td>@ViewBag.aboutTitle</td>
                                    <td>@ViewBag.aboutSubDescription</td>
                                    <td>@ViewBag.aboutDetails</td>
                                    <td><a href="/About/UpdateAbout/@ViewBag.aboutId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
